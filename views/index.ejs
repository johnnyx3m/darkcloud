<!DOCTYPE html>
<html>
<head>
	<% include ./partials/head %>
</head>
<body>

  <div id="main-content" class="container">
		<div class="row">
	    <div class="col-xs-6">
				<div style="padding-bottom: 20px">
					<!-- <button class="btn btn-primary" id="fetch-latest">Fetch latest forecast</button> -->
				</div>

				<table id="forecast" class="table table-bordered table-hover table-striped" cellspacing="0" width="100%">
          <thead>
            <tr>
              <th>Weather Forecast</th>
            </tr>
          </thead>
          <tbody>
            <% for(var i=0; i < data.length; i++) {%>
              <% var forecast = data[i]; %>
							<% include ./partials/forecast %>
            <%}%>
          </tbody>
        </table>
	    </div>
	    <div class="col-xs-6">
				<div class="col-xs-12">
					<form class="form-inline">
					  <div class="form-group">
					    <input type="text"  maxlength="25" class="form-control" id="city" name="city" placeholder="Input city">
					  </div>
					  <div class="form-group">
					    <input type="text" maxlength="25" class="form-control" id="state" name="state" placeholder="Input state">
					  </div>
					  <button type="submit" class="btn btn-primary" id="search">Search location</button>
					</form>
				</div>
				<div class="col-xs-12">
					<div class="spinner" style="display:none"></div>
					<div id="details">
						<% if(details) {%>
							<% include ./partials/details %>
						<%}%>
					</div>
				</div>
	    </div>
	  </div>
	</div>
	<% include ./partials/js %>
</body>
</html>
