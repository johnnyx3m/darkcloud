<tr>
  <td id=<%= forecast._id%> class="navigate-row">
    <div>
      <h3><%= forecast.display_location.city%>, <%= forecast.display_location.state_name%></h3>
      <div class="col-xs-3 text-center">
        <span>Friday 03/17</span> <br />
        <span style="color: #D5202A" class="h3"><%= forecast.temp_c%>&deg;C</span>
        <span style="color: #0053AE" class="h3"><%= forecast.temp_f%>&deg;F</span>
      </div>
      <div class="col-xs-9">
        <div class="col-xs-6">
          <span><%= forecast.weather%></span><br>
          <img src=<%= forecast.icon_url%> />
        </div>
        <div class="col-xs-6">
          <span class="label label-info">Feels like <%= forecast.feelslike_c%>&deg;C</span>
          <span class="label label-success">Humidity <%= forecast.relative_humidity%></span>

        </div>
        <div class="col-xs-12">
          <p><%= forecast.wind_string%></p>
        </div>
      </div>
    </div>
  </td>
</tr>
